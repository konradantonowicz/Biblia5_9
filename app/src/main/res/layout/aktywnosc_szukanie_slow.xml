<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AktywnoscSzukanieSlow"
    android:background="@android:color/black"
    >
    <EditText
        android:id="@+id/editTextszukaj"
        android:layout_width="300sp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:labelFor="@id/editTextszukaj"
        android:text=""
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btn_szukaj"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/editTextszukaj"

        android:text="@string/szukaj"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler_lista_znalezionych_wyrazow"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextszukaj"
        />





</RelativeLayout>